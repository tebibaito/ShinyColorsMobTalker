<Window x:Class="ShinyColorsMobTalker.DecidingAreaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShinyColorsMobTalker"
        mc:Ignorable="d"
        Title="DecidingAreaWindow" 
        WindowStyle="None" 
        WindowState="Maximized" 
        AllowsTransparency="True" 
        Background="#80000000" 
        Cursor="Cross"
        Topmost="True"
        >
  <Canvas x:Name="CanvasArea"
            PreviewMouseLeftButtonDown="MouseLeftDown"
            PreviewMouseLeftButtonUp="MouseLeftUp"
            PreviewMouseMove="MouseMoving"
          
          Background="Transparent"
          >
    <Button Content="Button" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Center" Click="Button_Click"/>
  </Canvas>
</Window>
